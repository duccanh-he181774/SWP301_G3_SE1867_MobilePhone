<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>DBContext</servlet-name>
        <servlet-class>dal.DBContext</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>manage</servlet-name>
        <servlet-class>controller.manage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductController</servlet-name>
        <servlet-class>controller.AdminProductController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>manageUser</servlet-name>
        <servlet-class>controller.manageUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DBContext</servlet-name>
        <url-pattern>/DBContext</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manage</servlet-name>
        <url-pattern>/manage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductController</servlet-name>
        <url-pattern>/manage-product</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>manageUser</servlet-name>
        <url-pattern>/manageUser</url-pattern>
    </servlet-mapping>
</web-app>
